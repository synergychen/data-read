<div class="row news-card">
  <div class="col s12 m8 l6 offset-m2 offset-l3">
    <div class="card hoverable white">
      <div class="card-content">
        <span class="card-title">
          <span class="title-number"><%= @post.title_number %></span>
          <span class="title-unit"><%= @post.title_unit %></span>
        </span>
        <p><%= @post.subtitle %></p>
      </div>

      <div class="card-action">
        <a class="waves-effect waves-white btn blue activator">More</a>
        <%= link_to "Source", @post.source, class: "waves-effect waves-white btn blue" %>
        <% if admin_signed_in? %>
          <%= link_to 'Edit', edit_post_path(@post), class: "waves-effect waves-white btn red" %>
        <% end %>

        <%= link_to 'Back', posts_path, class: "waves-effect waves-white btn red" %>
      </div>

      <div class="card-reveal">
        <span class="card-title grey-text text-darken-4">
          <%= @post.title_number %>
          <%= @post.title_unit %>
          <i class="material-icons right">close</i>
        </span>
        <p><%= @post.article %></p>
      </div>
    </div>
  </div>
</div>
