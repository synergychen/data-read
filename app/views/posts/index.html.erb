<p id="notice"><%= notice %></p>

<h1>Listing News</h1>

<ul>
  <% @posts.each do |post| %>
  <li>
    <%= post.title_number %>
    <%= post.title_unit %>
    <%= post.subtitle %>
    <%= post.date_published %>
    <%= post.article %>
    <%= post.source %>
    <%= post.views %>

    <%= link_to 'Show', post %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  </li>
  <% end %>
</ul>

<%= link_to 'New Post', new_post_path %>
